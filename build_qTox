#
# ./build_qTox {install_dir}
#

cd ../libsodium
./autogen.sh
./configure --prefix=$1
make clean;make -j8;make install

cd ../c-toxcore
./autogen.sh
 ./configure --prefix=$1 CFLAGS=-g3 --with-libsodium-headers=$1/include --with-libsodium-libs=$1/lib LIBS=-lssl -lcrypto --no-recursion
make clean;make -j8;make install
cd ..

cd qTox
./bootstrap.sh --without-tox 
rm -rf build
mkdir build
cd build
cmake -DCMAKE_PREFIX_PATH=$1 ..
make -j8
cd ..

